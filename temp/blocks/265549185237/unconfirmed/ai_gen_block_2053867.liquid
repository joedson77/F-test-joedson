{% doc %}
  @prompt
    create a section that has a title, text below the title, below that text two blocks in the same line that have two columns in each block, in the first an image and in the second a text and below a link

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-content-section-{{ ai_gen_id }} {
    padding: {{ block.settings.section_padding_top }}px 20px {{ block.settings.section_padding_bottom }}px;background-color: {{ block.settings.background_color }};
    max-width: 1200px;
    margin: 0 auto;
  }

  .ai-content-section__header-{{ ai_gen_id }} {
    text-align: center;
    margin-bottom: 40px;
  }

  .ai-content-section__title-{{ ai_gen_id }} {
    color: {{ block.settings.title_color }};
    font-size: {{ block.settings.title_size }}px;
    margin: 0 0 16px;
    line-height: 1.2;
  }

  .ai-content-section__description-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.text_size }}px;
    margin: 0;
    line-height: 1.5;
  }

  .ai-content-section__blocks-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: {{ block.settings.blocks_gap }}px;
  }

  .ai-content-block-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: {{ block.settings.content_gap }}px;
    align-items: center;
    padding: {{ block.settings.block_padding }}px;
    background-color: {{ block.settings.block_background_color }};
    border-radius: {{ block.settings.block_border_radius }}px;
  }

  .ai-content-block__image-{{ ai_gen_id }} {
    width: 100%;
    height: auto;
    border-radius: {{ block.settings.image_border_radius }}px;
  }

  .ai-content-block__image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    aspect-ratio: 1;
    background-color: #f4f4f4;
    border-radius: {{ block.settings.image_border_radius }}px;display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-content-block__image-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-content-block__content-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: 16px;
  }

  .ai-content-block__text-{{ ai_gen_id }} {
    color: {{ block.settings.block_text_color }};
    font-size: {{ block.settings.block_text_size }}px;
    line-height: 1.5;
    margin: 0;
  }

  .ai-content-block__link-{{ ai_gen_id }} {
    display: inline-flex;
    align-items: center;
    padding: 12px 24px;
    background-color: {{ block.settings.link_background_color }};
    color: {{ block.settings.link_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.link_border_radius }}px;
    font-size: {{ block.settings.link_text_size }}px;
    font-weight: 500;
    transition: background-color 0.3s ease;
    align-self: flex-start;
  }

  .ai-content-block__link-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.link_hover_background_color }};
    color: {{ block.settings.link_hover_text_color }};
  }

  @media screen and (max-width: 768px) {
    .ai-content-section__blocks-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      gap: 24px;
    }

    .ai-content-block-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      gap: 20px;
      text-align: center;
    }

    .ai-content-section__title-{{ ai_gen_id }} {
      font-size: {{ block.settings.title_size | times: 0.8 }}px;
    }
  }
{% endstyle %}

<div class="ai-content-section-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-content-section__header-{{ ai_gen_id }}">
    {% if block.settings.title != blank %}
      <h2 class="ai-content-section__title-{{ ai_gen_id }}">{{ block.settings.title }}</h2>
    {% endif %}
    
    {% if block.settings.description != blank %}
      <div class="ai-content-section__description-{{ ai_gen_id }}">{{ block.settings.description }}</div>
    {% endif %}
  </div>

  <div class="ai-content-section__blocks-{{ ai_gen_id }}"><div class="ai-content-block-{{ ai_gen_id }}">
      <div class="ai-content-block__image-wrapper-{{ ai_gen_id }}">
        {% if block.settings.block_1_image %}
          <img
            src="{{ block.settings.block_1_image | image_url: width: 600 }}"
            alt="{{ block.settings.block_1_image.alt | escape }}"
            class="ai-content-block__image-{{ ai_gen_id }}"
            loading="lazy"
            width="{{ block.settings.block_1_image.width }}"
            height="{{ block.settings.block_1_image.height }}"
          >
        {% else %}
          <div class="ai-content-block__image-placeholder-{{ ai_gen_id }}">
            {{ 'image' | placeholder_svg_tag }}
          </div>
        {% endif %}
      </div>
      
      <div class="ai-content-block__content-{{ ai_gen_id }}">
        {% if block.settings.block_1_text != blank %}
          <div class="ai-content-block__text-{{ ai_gen_id }}">{{ block.settings.block_1_text }}</div>
        {% endif %}
        
        {% if block.settings.block_1_link_text != blank and block.settings.block_1_link_url != blank %}
          <a href="{{ block.settings.block_1_link_url }}" class="ai-content-block__link-{{ ai_gen_id }}">
            {{ block.settings.block_1_link_text }}
          </a>
        {% endif %}
      </div>
    </div>

    <div class="ai-content-block-{{ ai_gen_id }}">
      <div class="ai-content-block__image-wrapper-{{ ai_gen_id }}">
        {% if block.settings.block_2_image %}
          <img
            src="{{ block.settings.block_2_image | image_url: width: 600 }}"
            alt="{{ block.settings.block_2_image.alt | escape }}"
            class="ai-content-block__image-{{ ai_gen_id }}"
            loading="lazy"
            width="{{ block.settings.block_2_image.width }}"
            height="{{ block.settings.block_2_image.height }}"
          >
        {% else %}
          <div class="ai-content-block__image-placeholder-{{ ai_gen_id }}">
            {{ 'image' | placeholder_svg_tag }}
          </div>
        {% endif %}
      </div>
      
      <div class="ai-content-block__content-{{ ai_gen_id }}">
        {% if block.settings.block_2_text != blank %}
          <div class="ai-content-block__text-{{ ai_gen_id }}">{{ block.settings.block_2_text }}</div>
        {% endif %}
        
        {% if block.settings.block_2_link_text != blank and block.settings.block_2_link_url != blank %}
          <a href="{{ block.settings.block_2_link_url }}" class="ai-content-block__link-{{ ai_gen_id }}">
            {{ block.settings.block_2_link_text }}
          </a>
        {% endif %}
      </div>
    </div>
  </div>
</div>

