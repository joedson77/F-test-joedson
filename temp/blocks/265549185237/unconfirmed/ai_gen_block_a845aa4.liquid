{% doc %}
  @prompt
    fa√ßa uma section identica com a que existe de "icons with text" em uma coluna e a outra coluna seja imagem, quero definir a altura, tamanho das imagens e se quero primeiro os icones ou a imagem, tudo em ingles

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-icons-image-block-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: {{ block.settings.spacing }}px;
    min-height: {{ block.settings.section_height }}px;
    padding: 40px 0;
  }

  .ai-icons-image-block-{{ ai_gen_id }}--reverse {
    flex-direction: row-reverse;
  }

  .ai-icons-column-{{ ai_gen_id }} {
    flex: 1;display: flex;
    flex-direction: column;
    gap: {{ block.settings.icon_spacing }}px;
  }

  .ai-image-column-{{ ai_gen_id }} {
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-image-wrapper-{{ ai_gen_id }} {
    width: 100%;
    max-width: {{ block.settings.image_max_width }}px;
    height: {{ block.settings.image_height }}px;
    position: relative;
    overflow: hidden;
    border-radius: {{ block.settings.image_border_radius }}px;
  }

  .ai-image-wrapper-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: cover;}

  .ai-image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-image-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 8px 16px;
    background-color: rgba(255, 255, 255, 0.9);
    border-radius: 4px;
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

  .ai-icon-item-{{ ai_gen_id }} {
    display: flex;
    align-items: flex-start;
    gap: {{ block.settings.icon_text_spacing }}px;
    text-align: left;
  }

  .ai-icon-wrapper-{{ ai_gen_id }} {
    flex-shrink: 0;
    width: {{ block.settings.icon_size }}px;
    height: {{ block.settings.icon_size }}px;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: {{ block.settings.icon_background_color }};
    border-radius: {{ block.settings.icon_border_radius }}px;color: {{ block.settings.icon_color }};
  }

  .ai-icon-wrapper-{{ ai_gen_id }} svg {
    width: calc({{ block.settings.icon_size }}px * 0.6);
    height: calc({{ block.settings.icon_size }}px * 0.6);
  }

  .ai-icon-content-{{ ai_gen_id }} {
    flex: 1;}

  .ai-icon-title-{{ ai_gen_id }} {
    margin: 0 0 8px 0;
    font-size: {{ block.settings.title_font_size }}px;
    font-weight: 600;
    color: {{ block.settings.title_color }};
  }

  .ai-icon-text-{{ ai_gen_id }} {
    margin: 0;
    font-size: {{ block.settings.text_font_size }}px;
    color: {{ block.settings.text_color }};
    line-height: 1.5;
  }

  @media screen and (max-width: 749px) {
    .ai-icons-image-block-{{ ai_gen_id }} {
      flex-direction: column;
      gap: 32px;
      min-height: auto;
    }

    .ai-icons-image-block-{{ ai_gen_id }}--reverse {
      flex-direction: column-reverse;
    }

    .ai-image-wrapper-{{ ai_gen_id }} {
      height: {{ block.settings.image_height | times: 0.7 }}px;
    }

    .ai-icon-item-{{ ai_gen_id }} {
      gap: {{ block.settings.icon_text_spacing | times: 0.8 }}px;
    }
  }
{% endstyle %}<div
  class="ai-icons-image-block-{{ ai_gen_id }} {% if block.settings.layout == 'image_first' %}ai-icons-image-block-{{ ai_gen_id }}--reverse{% endif %}"
  {{ block.shopify_attributes }}
>
  <div class="ai-icons-column-{{ ai_gen_id }}">
    {% for i in (1..5) %}
      {% liquid
        assign title_key = 'icon_' | append: i | append: '_title'
        assign text_key = 'icon_' | append: i | append: '_text'
        assign title = block.settings[title_key]
        assign text = block.settings[text_key]
      %}

      {% if title != blank or text != blank %}
        <div class="ai-icon-item-{{ ai_gen_id }}">
          <div class="ai-icon-wrapper-{{ ai_gen_id }}">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="20,6 9,17 4,12"></polyline>
            </svg>
          </div>
          <div class="ai-icon-content-{{ ai_gen_id }}">
            {% if title != blank %}
              <h3 class="ai-icon-title-{{ ai_gen_id }}">{{ title }}</h3>
            {% endif %}
            {% if text != blank %}
              <p class="ai-icon-text-{{ ai_gen_id }}">{{ text }}</p>
            {% endif %}
          </div>
        </div>
      {% endif %}
    {% endfor %}
  </div>

  <div class="ai-image-column-{{ ai_gen_id }}">
    <div class="ai-image-wrapper-{{ ai_gen_id }}">
      {% if block.settings.image %}
        <img
          src="{{ block.settings.image | image_url: width: 1000 }}"
          alt="{{ block.settings.image.alt | escape }}"
          loading="lazy"
          width="{{ block.settings.image.width }}"
          height="{{ block.settings.image.height }}"
        >
      {% else %}
        <div class="ai-image-placeholder-{{ ai_gen_id }}">
          {{ 'image' | placeholder_svg_tag }}
          <div class="ai-empty-state-{{ ai_gen_id }}">
            Add an image to complete this section
          </div>
        </div>
      {% endif %}
    </div>
  </div>
</div>

