    width: 80px;
    height: 80px;
    opacity: 0.3;
  }

  .ai-wine-slider__badge-{{ ai_gen_id }} {
    position: absolute;
    top: 12px;
    right: 12px;
    background-color: {{ block.settings.badge_color }};
    color: {{ block.settings.badge_text_color }};
    padding: 4px 8px;
    border-radius: 4px;
    font-size: 12px;
    font-weight: 600;
  }

