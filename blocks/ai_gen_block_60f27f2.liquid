            class="ai-wine-slider__dot-{{ ai_gen_id }}{% if forloop.first %} active{% endif %}"
            data-slide="{{ forloop.index0 }}"
            aria-label="Go to product {{ forloop.index }}"
          ></button>
        {% endfor %}
      </div>
    </div>
  </div>
