    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-wine-slider__image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
  }

