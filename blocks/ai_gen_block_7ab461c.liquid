{% doc %}
  @prompt
    create a section that has a title, a text below the title, below that text two blocks in the same line that have in each block two columns, in the first an image and in the second a text and below a link, below these two blocks that have two columns above there will be two columns also the first a simple image with 25% of the screen size and the other column a block with title text and a button

{% enddoc %}
{% assign ai_gen_id = section.id | replace: '_', '' | downcase %}

{% style %}
  .ai-content-section-{{ ai_gen_id }} {
    padding: {{ section.settings.section_padding_top }}px 0 {{ section.settings.section_padding_bottom }}px;
    background-color: {{ section.settings.background_color }};
  }

  .ai-content-section__container-{{ ai_gen_id }} {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-content-section__header-{{ ai_gen_id }} {
    text-align: center;
    margin-bottom: 40px;
  }

  .ai-content-section__title-{{ ai_gen_id }} {
    color: {{ section.settings.title_color }};
    font-size: {{ section.settings.title_size }}px;
    margin: 0 0 16px;}

  .ai-content-section__description-{{ ai_gen_id }} {
    color: {{ section.settings.text_color }};
    font-size: {{ section.settings.text_size }}px;
    margin: 0;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }

  .ai-content-section__blocks-row-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 30px;
    margin-bottom: 50px;
  }

  .ai-content-block-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 20px;
    align-items: center;
    background-color: {{ section.settings.block_background_color }};
    padding: 30px;
    border-radius: {{ section.settings.block_border_radius }}px;
  }

  .ai-content-block__image-wrapper-{{ ai_gen_id }} {
    width: 100%;
  }

  .ai-content-block__image-{{ ai_gen_id }} {
    width: 100%;
    height: auto;
    border-radius: {{ section.settings.image_border_radius }}px;
  }

  .ai-content-block__image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    aspect-ratio: 4/3;
    background-color: #f4f4f4;
    border-radius: {{ section.settings.image_border_radius }}px;display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-content-block__image-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-content-block__content-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: 16px;
  }

  .ai-content-block__text-{{ ai_gen_id }} {
    color: {{ section.settings.block_text_color }};
    font-size: {{ section.settings.block_text_size }}px;
    margin: 0;
  }

  .ai-content-block__link-{{ ai_gen_id }} {
    color: {{ section.settings.link_color }};
    text-decoration: none;
    font-size: {{ section.settings.link_size }}px;
    font-weight: 500;
  }

  .ai-content-block__link-{{ ai_gen_id }}:hover {
    color: {{ section.settings.link_hover_color }};
    text-decoration: underline;
  }

  .ai-content-section__bottom-row-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: 25% 1fr;
    gap: 40px;
    align-items: center;
  }

  .ai-content-section__bottom-image-wrapper-{{ ai_gen_id }} {
    width: 100%;}

  .ai-content-section__bottom-image-{{ ai_gen_id }} {
    width: 100%;
    height: auto;
    border-radius: {{ section.settings.bottom_image_border_radius }}px;
  }

  .ai-content-section__bottom-image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    aspect-ratio: 1;
    background-color: #f4f4f4;
    border-radius: {{ section.settings.bottom_image_border_radius }}px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-content-section__bottom-image-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-content-section__bottom-content-{{ ai_gen_id }} {
    background-color: {{ section.settings.bottom_block_background_color }};
    padding: 40px;
    border-radius: {{ section.settings.bottom_block_border_radius }}px;
    display: flex;
    flex-direction: column;
    gap: 20px;
  }

  .ai-content-section__bottom-title-{{ ai_gen_id }} {
    color: {{ section.settings.bottom_title_color }};
    font-size: {{ section.settings.bottom_title_size }}px;
    margin: 0;
  }

  .ai-content-section__bottom-text-{{ ai_gen_id }} {
    color: {{ section.settings.bottom_text_color }};
    font-size: {{ section.settings.bottom_text_size }}px;
    margin: 0;
  }

  .ai-content-section__bottom-button-{{ ai_gen_id }} {
    background-color: {{ section.settings.button_background_color }};
    color: {{ section.settings.button_text_color }};
    padding: 12px 24px;
    border: none;
    border-radius: {{ section.settings.button_border_radius }}px;
    text-decoration: none;
    display: inline-block;
    font-size: {{ section.settings.button_text_size }}px;
    font-weight: 500;
    text-align: center;
    cursor: pointer;
    transition: background-color 0.3s ease;
    align-self: flex-start;
  }

  .ai-content-section__bottom-button-{{ ai_gen_id }}:hover {
    background-color: {{ section.settings.button_hover_background_color }};color: {{ section.settings.button_hover_text_color }};
  }

  @media screen and (max-width: 768px) {
    .ai-content-section__blocks-row-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      gap: 20px;
    }

    .ai-content-block-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      text-align: center;
    }

    .ai-content-section__bottom-row-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      gap: 30px;
    }

    .ai-content-section__bottom-content-{{ ai_gen_id }} {
      padding: 30px 20px;
      text-align: center;
    }

    .ai-content-section__bottom-button-{{ ai_gen_id }} {
      align-self: center;
    }
  }

  @media screen and (max-width: 480px) {
    .ai-content-section__container-{{ ai_gen_id }} {
      padding: 0 15px;
    }

    .ai-content-block-{{ ai_gen_id }} {
      padding: 20px;
    }

    .ai-content-section__bottom-content-{{ ai_gen_id }} {
      padding: 25px 15px;
    }
  }
{% endstyle %}<section class="ai-content-section-{{ ai_gen_id }}" {{ section.shopify_attributes }}>
  <div class="ai-content-section__container-{{ ai_gen_id }}">
    <div class="ai-content-section__header-{{ ai_gen_id }}">
      {% if section.settings.title != blank %}
        <h2 class="ai-content-section__title-{{ ai_gen_id }}">{{ section.settings.title }}</h2>
      {% endif %}
      {% if section.settings.description != blank %}
        <div class="ai-content-section__description-{{ ai_gen_id }}">{{ section.settings.description }}</div>
      {% endif %}
    </div>

    <div class="ai-content-section__blocks-row-{{ ai_gen_id }}">
      <div class="ai-content-block-{{ ai_gen_id }}">
        <div class="ai-content-block__image-wrapper-{{ ai_gen_id }}">
          {% if section.settings.block_1_image %}
            <img
              src="{{ section.settings.block_1_image | image_url: width: 600 }}"
              alt="{{ section.settings.block_1_image.alt | escape }}"
              class="ai-content-block__image-{{ ai_gen_id }}"
              loading="lazy"
              width="{{ section.settings.block_1_image.width }}"
              height="{{ section.settings.block_1_image.height }}"
            >
          {% else %}
            <div class="ai-content-block__image-placeholder-{{ ai_gen_id }}">
              {{ 'image' | placeholder_svg_tag }}
            </div>
          {% endif %}
        </div><div class="ai-content-block__content-{{ ai_gen_id }}">
          {% if section.settings.block_1_text != blank %}
            <div class="ai-content-block__text-{{ ai_gen_id }}">{{ section.settings.block_1_text }}</div>
          {% endif %}
          {% if section.settings.block_1_link_text != blank and section.settings.block_1_link_url != blank %}
            <a href="{{ section.settings.block_1_link_url }}" class="ai-content-block__link-{{ ai_gen_id }}">
              {{ section.settings.block_1_link_text }}
            </a>
          {% endif %}
        </div>
      </div>

      <div class="ai-content-block-{{ ai_gen_id }}">
        <div class="ai-content-block__image-wrapper-{{ ai_gen_id }}">
          {% if section.settings.block_2_image %}
            <img
              src="{{ section.settings.block_2_image | image_url: width: 600 }}"
              alt="{{ section.settings.block_2_image.alt | escape }}"
              class="ai-content-block__image-{{ ai_gen_id }}"
              loading="lazy"
              width="{{ section.settings.block_2_image.width }}"
              height="{{ section.settings.block_2_image.height }}"
            >
          {% else %}
            <div class="ai-content-block__image-placeholder-{{ ai_gen_id }}">
              {{ 'image' | placeholder_svg_tag }}
            </div>
          {% endif %}
        </div>
        <div class="ai-content-block__content-{{ ai_gen_id }}">
          {% if section.settings.block_2_text != blank %}
            <div class="ai-content-block__text-{{ ai_gen_id }}">{{ section.settings.block_2_text }}</div>
          {% endif %}
          {% if section.settings.block_2_link_text != blank and section.settings.block_2_link_url != blank %}
            <a href="{{ section.settings.block_2_link_url }}" class="ai-content-block__link-{{ ai_gen_id }}">
              {{ section.settings.block_2_link_text }}
            </a>
          {% endif %}
        </div>
      </div>
    </div>

    <div class="ai-content-section__bottom-row-{{ ai_gen_id }}"><div class="ai-content-section__bottom-image-wrapper-{{ ai_gen_id }}">
        {% if section.settings.bottom_image %}
          <img
            src="{{ section.settings.bottom_image | image_url: width: 400 }}"
            alt="{{ section.settings.bottom_image.alt | escape }}"
            class="ai-content-section__bottom-image-{{ ai_gen_id }}"
            loading="lazy"
            width="{{ section.settings.bottom_image.width }}"
            height="{{ section.settings.bottom_image.height }}"
          >
        {% else %}
          <div class="ai-content-section__bottom-image-placeholder-{{ ai_gen_id }}">
            {{ 'image' | placeholder_svg_tag }}
          </div>
        {% endif %}
      </div>

      <div class="ai-content-section__bottom-content-{{ ai_gen_id }}">
        {% if section.settings.bottom_title != blank %}
          <h3 class="ai-content-section__bottom-title-{{ ai_gen_id }}">{{ section.settings.bottom_title }}</h3>
        {% endif %}
        {% if section.settings.bottom_text != blank %}
          <div class="ai-content-section__bottom-text-{{ ai_gen_id }}">{{ section.settings.bottom_text }}</div>
        {% endif %}
        {% if section.settings.bottom_button_text != blank and section.settings.bottom_button_url != blank %}
          <a href="{{ section.settings.bottom_button_url }}" class="ai-content-section__bottom-button-{{ ai_gen_id }}">
            {{ section.settings.bottom_button_text }}
          </a>
        {% endif %}
      </div>
    </div>
  </div>
</section>

